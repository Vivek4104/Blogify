<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Blog Page</title>
    <link rel="stylesheet" href="./partials/footer.css">

</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <form action="/blog" method="post" enctype="multipart/form-data" >
            <div class="mb-3">
                <label for="coverImage" class="from-label">CoverImage</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
                </div>
            <div class="mb-3">
            <label for="title" class="from-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" aria-describedby="title">
            </div>
            <div class="mb-3">
                <label for="body" class="from-label">Body</label>
                <textarea name="body" class="form-control" id="body"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <%- include('./partials/script') %>
    <%- include('./partials/footer') %>
</body>
</html>